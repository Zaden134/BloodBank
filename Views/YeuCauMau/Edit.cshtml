@model BloodBank.Models.YeuCauMau

@{
    ViewBag.Title = "Chỉnh sửa Yêu cầu máu";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>
        <h4>Thông tin chi tiết</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDYeuCau)

        <div class="mb-3">
            @Html.LabelFor(model => model.IDMau, "Ngân Hàng Máu")
            @Html.DropDownList("IDMau", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IDMau, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.IDBenhNhan, "ID Bệnh Nhân")
            @Html.EditorFor(model => model.IDBenhNhan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IDBenhNhan, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.LoaiMau, "Loại Máu")
            @Html.EditorFor(model => model.LoaiMau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LoaiMau, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.LuongMauYeuCau, "Lượng Máu (ML)")
            @Html.EditorFor(model => model.LuongMauYeuCau, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            @Html.ValidationMessageFor(model => model.LuongMauYeuCau, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.NgayYC, "Ngày Yêu Cầu")
            @Html.EditorFor(model => model.NgayYC, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.NgayYC, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.TrangThai, "Trạng Thái")
            @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
        </div>

        <div class="mt-4">
            <button type="submit" class="btn-primary">Lưu thay đổi</button>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn-secondary" })
        </div>
    </form>
}