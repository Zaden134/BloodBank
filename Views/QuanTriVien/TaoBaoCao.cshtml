@model dynamic

@{
    ViewBag.Title = "Báo cáo Tồn kho Máu";
}

<h2>@ViewBag.Title</h2>
<p>Báo cáo thống kê tổng lượng máu (ML) hiện có theo từng loại.</p>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Loại Máu</th>
            <th>Tổng Lượng (ML)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><strong>@item.LoaiMau</strong></td>
                <td>@item.TongLuong</td>
            </tr>
        }
    </tbody>
</table>

<p class="mt-3">
    @Html.ActionLink("Quay lại trang quản trị", "Index")
</p>