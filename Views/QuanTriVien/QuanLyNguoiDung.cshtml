@model IEnumerable<BloodBank.Models.NguoiDung>

@{
    ViewBag.Title = "Quản lý Người dùng";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped">
    <tr>
        <th>Mã Người Dùng</th>
        <th>Họ Tên</th>
        <th>Email</th>
        <th>Nhóm Máu</th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => user.IDNguoiDung)</td>
            <td>@Html.DisplayFor(modelItem => user.Email)</td>
            <td>
                @Html.ActionLink("Xem chi tiết", "Details", "NguoiDung", new { id = user.IDNguoiDung }, null)
            </td>
        </tr>
    }
</table>