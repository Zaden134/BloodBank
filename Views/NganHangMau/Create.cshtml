@model BloodBank.Models.NganHangMau

@{
    ViewBag.Title = "Thêm Ngân hàng máu";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>
        <h4>Thông tin Ngân hàng máu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="mb-3">
            @Html.LabelFor(model => model.IDMau, "Mã Ngân Hàng Máu")
            @Html.EditorFor(model => model.IDMau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IDMau, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.DiaDiem, "Địa Điểm")
            @Html.EditorFor(model => model.DiaDiem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaDiem, "", new { @class = "text-danger" })
        </div>

        <div class="mt-4">
            <button type="submit" class="btn-primary">Tạo mới</button>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn-secondary" })
        </div>
    </form>
}