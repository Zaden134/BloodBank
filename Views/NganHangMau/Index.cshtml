@model IEnumerable<BloodBank.Models.NganHangMau>

@{
    ViewBag.Title = "Quản lý Ngân hàng máu";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Thêm Ngân hàng máu mới", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>Mã Ngân Hàng Máu</th>
        <th>Địa Điểm</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.IDMau)</td>
            <td>@Html.DisplayFor(modelItem => item.DiaDiem)</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDMau }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDMau }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDMau })
            </td>
        </tr>
    }
</table>