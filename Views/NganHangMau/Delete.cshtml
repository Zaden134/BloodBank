@model BloodBank.Models.NganHangMau

@{
    ViewBag.Title = "Xóa Ngân hàng máu";
}

<h2>@ViewBag.Title</h2>

<h3>Bạn có chắc chắn muốn xóa mục này không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Mã Ngân Hàng Máu</dt>
        <dd>@Html.DisplayFor(model => model.IDMau)</dd>
        <dt>Địa Điểm</dt>
        <dd>@Html.DisplayFor(model => model.DiaDiem)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    }
</div>