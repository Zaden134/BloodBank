@model BloodBank.Models.NganHangMau

@{
    ViewBag.Title = "Chỉnh sửa thông tin";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>
        <h4>Ngân hàng máu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDMau)

        <div class="mb-3">
            @Html.LabelFor(model => model.DiaDiem, "Địa Điểm")
            @Html.EditorFor(model => model.DiaDiem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaDiem, "", new { @class = "text-danger" })
        </div>

        <div class="mt-4">
            <button type="submit" class="btn-primary">Lưu thay đổi</button>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn-secondary" })
        </div>
    </form>
}