@model BloodBank.Models.HienMau

@{
    ViewBag.Title = "Ghi nhận thông tin hiến máu";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>
        <h4>Thông tin hiến máu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.IDMaHienMau, "Mã Hiến Máu")
            @Html.EditorFor(model => model.IDMaHienMau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IDMaHienMau, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.IDNguoiHien, "ID Người Hiến")
            @Html.EditorFor(model => model.IDNguoiHien, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IDNguoiHien, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.LoaiMau, "Loại Máu")
            @Html.EditorFor(model => model.LoaiMau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LoaiMau, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.NgayHienMau, "Ngày Hiến Máu")
            @Html.EditorFor(model => model.NgayHienMau, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
            @Html.ValidationMessageFor(model => model.NgayHienMau, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.LuongMauHien, "Lượng Máu Hiến (ML)")
            @Html.EditorFor(model => model.LuongMauHien, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            @Html.ValidationMessageFor(model => model.LuongMauHien, "", new { @class = "text-danger" })
        </div>

        <div class="mt-4">
            <button type="submit" class="btn-primary">Lưu thông tin</button>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn-secondary" })
        </div>
    </form>
}